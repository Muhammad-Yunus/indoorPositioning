<UserControl x:Class="IndoorPositioning.UI.VisualItems.BeaconShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IndoorPositioning.UI.VisualItems"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="16">
    <Grid>
        <Polygon Width="16" Height="16"  Fill="Red" Stroke="Black" StrokeThickness="2">
            <Polygon.Points>
                <Point X="0" Y="0" />
                <Point X="16" Y="0" />
                <Point X="8" Y="8" />
            </Polygon.Points>
        </Polygon>
    </Grid>
</UserControl>
